{
  "manifest_version": 3,
  "name": "FlowTask - Productivity Dashboard",
  "version": "1.0.0",
  "description": "Transform your new tab into a beautiful productivity dashboard with todos, timeline, sticky notes, and inspirational quotes.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "FlowTask"
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
